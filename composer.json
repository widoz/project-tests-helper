{
  "name": "widoz/project-tests-helper",
  "description": "Php Tests Helper library to include into your projects",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Guido Scialfa",
      "email": "dev@guidoscialfa.com"
    }
  ],
  "minimum-stability": "dev",
  "require": {
    "php": ">=7.1"
  },
  "require-dev": {
    "brain/monkey": "2.0.*",
    "mockery/mockery": "1.0.*",
    "phpunit/phpunit": "^7",
    "composer/composer": "^1.9@dev",
    "inpsyde/php-coding-standards": "^0.13.0@dev"
  },
  "autoload": {
    "classmap": [
      "src/"
    ],
    "psr-4": {
      "ProjectTestsHelper\\": "src/"
    }
  },
  "config": {
    "platform": {
      "php": "7.1"
    }
  }
}
